<%- include('../partials/header') -%>
    <%- include('../partials/head') -%>
        <div class="container">
            <!-- <div class="container-illustrate">
                <img src="/images/form.svg" alt="">
            </div> -->
            <div class="container-form">
                <div class="heading">
                    <h1>Sign up to waawTube. </h1>
                    <h3>Already a member? <a href="/login">Log in</a></h3>
                </div>

                <div class="social-login">
                    <input type="button" value="sign up with facebook">
                    <input type="button" value="sign up with google">
                </div>
                <div class="line">
                    <div class="line-1"></div>
                    <h3>Or</h3>
                    <div class="line-2"></div>
                </div>

                <form action="/signup" method="post">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="" placeholder="name@gmail.com">
                    <label for="email">Password</label>
                    <input type="password" name="password" id="" placeholder="6+ characters">

                    <input type="submit" value="continue">
                </form>
                <div class="forgot">
                    <h3>Forgot password?</h3>
                    <a href="/reset">Reset Password.</a>
                </div>
            </div>
        </div>
        <%- include('../partials/footer') -%>